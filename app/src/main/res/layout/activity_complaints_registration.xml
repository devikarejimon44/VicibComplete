<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MembersArea.Complaints.ComplaintsRegistration">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:fitsSystemWindows="true"
            app:elevation="0dp">


            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/compliant_reg_ToolBar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                app:layout_scrollFlags="scroll|enterAlways|snap"
                app:title="Complaint Registration"
                app:titleTextColor="@color/colorWhiteShoppy">



            </com.google.android.material.appbar.MaterialToolbar>


        </com.google.android.material.appbar.AppBarLayout>


       <ScrollView
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <LinearLayout
               android:paddingBottom="90dp"
               android:layout_margin="8dp"
               android:layout_marginBottom="60dp"
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <TextView
                   android:layout_marginTop="10dp"
                   android:text="WRITE WITH US!"
                   android:textColor="@color/colorPrimaryDark"
                   android:textSize="15dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>
               <TextView
                   android:layout_marginTop="10dp"
                   android:text="Complaint In"
                   android:textSize="15dp"
                   android:textColor="@color/colorBlackShoppy"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

               <Spinner
                   android:id="@+id/comp_complaints_in"
                   android:layout_width="match_parent"
                   android:layout_height="40dp"
                   android:layout_marginTop="5dp"
                   android:background="@drawable/linebg" />

               <TextView
                   android:layout_marginTop="10dp"
                   android:text="Priority"
                   android:textColor="@color/colorBlackShoppy"
                   android:textSize="15dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
               <Spinner
                   android:id="@+id/comp_priority"
                   android:layout_marginTop="5dp"
                   android:background="@drawable/linebg"
                   android:layout_width="match_parent"

                   android:layout_height="40dp"/>
               <TextView
                   android:layout_marginTop="10dp"
                   android:text="Subject"
                   android:textSize="15dp"
                   android:textColor="@color/colorBlackShoppy"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
               <EditText
                   android:id="@+id/comp_subject"
                   android:textColor="@color/colorBlackShoppy"
                   android:layout_marginTop="5dp"
                   android:textSize="15dp"

                   android:background="@drawable/linebg"
                   android:layout_width="match_parent"
                   android:layout_height="40dp"/>
               <TextView
                   android:layout_marginTop="10dp"
                   android:text="Description"
                   android:textColor="@color/colorBlackShoppy"
                   android:textSize="15dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
               <EditText
                   android:id="@+id/comp_description"
                   android:layout_marginTop="5dp"
                   android:textSize="15dp"
                   android:background="@drawable/linebg"
                   android:layout_width="match_parent"
                   android:layout_height="80dp"/>
               <com.google.android.material.button.MaterialButton
                   android:id="@+id/comp_image_upload"
                   android:layout_marginTop="10dp"
                   android:text="Upload File"
                   android:textSize="15dp"
                   android:textColor="#FFFFFF"
                   android:textAllCaps="false"
                   android:background="@drawable/bluebg"
                   android:layout_width="wrap_content"
                   android:layout_height="40dp"/>
               <ImageView
                   android:id="@+id/c_image"
                   android:layout_marginTop="10dp"
                   android:src="@drawable/imagedemo"
                   android:layout_width="200dp"
                   android:layout_height="150dp"/>
               <LinearLayout

                   android:layout_gravity="center"
                   android:gravity="center"
                   android:layout_width="match_parent"
                   android:layout_height="60dp">
                   <com.google.android.material.button.MaterialButton
                       android:id="@+id/comp_submit"
                       android:layout_gravity="center"
                       android:text="Submit"
                       android:textSize="15dp"
                       android:textColor="#FFFFFF"
                       android:textAllCaps="false"
                       android:background="@drawable/bluebg"
                       android:layout_width="100dp"
                       android:layout_height="40dp"/>
                   <com.google.android.material.button.MaterialButton
                       android:id="@+id/comp_reset"
                       android:layout_marginLeft="15dp"
                       android:layout_gravity="center"
                       android:text="Reset"
                       android:textSize="15dp"
                       android:textColor="#FFFFFF"
                       android:textAllCaps="false"
                       android:background="@drawable/bluebg"
                       android:layout_width="100dp"
                       android:layout_height="40dp"/>
               </LinearLayout>

           </LinearLayout>
       </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/border">

        <LinearLayout
            android:id="@+id/complaints_dash"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:srcCompat="@drawable/ic_dashboard"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dashboard"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/complaints_productstore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:srcCompat="@drawable/ic_cart_bottom"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Store"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/complaints_compliants"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:srcCompat="@drawable/ic_complaint_bottom"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complaints"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/complaints_idcard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:srcCompat="@drawable/ic_idcard"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID Card"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/compliants_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/account_profile_pic"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:srcCompat="@drawable/ic_perosn_bottom"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account"
                android:textSize="10dp" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>