<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MembersArea.MenuFragments.Complaints.CompliantRegistrationFragment">
  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:fitsSystemWindows="true"
            app:elevation="0dp">


            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/f_compliant_reg_ToolBar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                app:layout_scrollFlags="scroll|enterAlways|snap"
                app:title="Complaint Registration"
                android:fontFamily="@font/open_sans_semibold"
                app:titleTextColor="@color/colorWhiteShoppy">



            </com.google.android.material.appbar.MaterialToolbar>


        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:paddingBottom="90dp"
                android:layout_margin="8dp"
                android:layout_marginBottom="60dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_marginTop="10dp"
                    android:text="WRITE WITH US!"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textColor="@color/colorText"
                    android:textSize="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:text="Complaint In"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textSize="15dp"
                    android:textColor="@color/colorBlackShoppy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <Spinner
                    android:id="@+id/f_comp_complaints_in"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:background="@drawable/linebg" />
                <TextView
                    android:layout_marginTop="10dp"
                    android:text="Priority"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textColor="@color/colorBlackShoppy"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Spinner
                    android:id="@+id/f_comp_priority"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:background="@drawable/linebg"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:text="Subject"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textSize="15dp"
                    android:textColor="@color/colorBlackShoppy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/f_comp_subject"
                    android:padding="5dp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textColor="@color/colorBlackShoppy"
                    android:layout_marginTop="5dp"
                    android:textSize="15dp"

                    android:background="@drawable/linebg"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:text="Description"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textColor="@color/colorBlackShoppy"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/f_comp_description"
                    android:fontFamily="@font/open_sans_semibold"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:textSize="15dp"
                    android:background="@drawable/linebg"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_gravity="center"
                    android:id="@+id/f_comp_image_upload"
                    android:layout_marginTop="10dp"
                    android:text="Upload File"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textSize="15dp"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="false"
                    android:background="@drawable/bluebg"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"/>
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/f_c_image"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/imagedemo"
                    android:layout_width="200dp"
                    android:layout_height="150dp"/>
                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/f_comp_submit"
                        android:layout_gravity="center"
                        android:text="Submit"
                        android:fontFamily="@font/open_sans_semibold"
                        android:textSize="15dp"
                        android:textColor="#FFFFFF"
                        android:textAllCaps="false"
                        android:background="@drawable/bluebg"
                        android:layout_width="100dp"
                        android:layout_height="40dp"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/f_comp_reset"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center"
                        android:text="Reset"
                        android:fontFamily="@font/open_sans_semibold"
                        android:textSize="15dp"
                        android:textColor="#FFFFFF"
                        android:textAllCaps="false"
                        android:background="@drawable/bluebg"
                        android:layout_width="100dp"
                        android:layout_height="40dp"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</RelativeLayout>


</FrameLayout>