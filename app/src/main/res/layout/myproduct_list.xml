<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
       >
        <TextView
            android:id="@+id/myproduct_product"
            android:text="Coffie"
            android:textSize="18dp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
      <LinearLayout
          android:layout_marginTop="5dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <TextView
              android:id="@+id/myproduct_quantity"
              android:text="1"
              android:textSize="15dp"
              android:textColor="@android:color/black"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
          <ImageView
              android:layout_gravity="center"
              android:layout_marginLeft="10dp"
              android:src="@drawable/into"
              android:layout_width="9dp"
              android:layout_height="9dp"/>
          <TextView
              android:id="@+id/myproduct_amount"
              android:layout_marginLeft="10dp"
              android:text="1500.00"
              android:textSize="15dp"
              android:textColor="@android:color/black"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
          <TextView
              android:id="@+id/myproduct_totalamount"
              android:layout_marginLeft="10dp"
              android:text="1500.00"
              android:textSize="15dp"
              android:textColor="@android:color/black"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
      </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="#FFC107"
                android:layout_margin="5dp"
                app:cardCornerRadius="10dp"
                android:padding="5dp"
                android:background="@color/colorPrimaryDark"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="45dp">
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="BV"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/myproduct_BV"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textColor="@android:color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1200"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_margin="5dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="#FFC107"
                app:cardCornerRadius="10dp"
                android:background="@color/colorPrimaryDark"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="45dp">
                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:text="Total BV"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/myproduct_totalBV"
                        android:layout_gravity="center"
                        android:text="1200"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="#FFC107"
                android:layout_margin="5dp"
                app:cardCornerRadius="10dp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:background="@color/colorPrimaryDark"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="45dp">
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:text="Total Amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/myproducts_total_amount"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textColor="@android:color/white"
                        android:text="1200"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>
